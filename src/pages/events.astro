---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getSortedEvents } from "../utils/events";

const events = await getSortedEvents();
---


<BaseLayout title="Events" pageTitle="Events">
    <div class="space-y-8">
        <!-- Seiten-Header -->
        <header class="text-center pb-8 border-b border-gray-200">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">
                ğŸ“… Events & Meetups
            </h1>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                Entdecke alle Events der PHP USERGROUP DRESDEN e.V. - von kommenden Meetups 
                bis hin zu vergangenen Veranstaltungen mit spannenden Talks und Workshops.
            </p>
        </header>

        <div class="space-y-12">
            {events.map((event) => (
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h2 class="text-2xl font-semibold text-gray-900 mb-2">
                        {event.data.title}
                    </h2>
                    <p class="text-gray-600 mb-4">
                        ğŸ“… {new Date(event.data.date || '').toLocaleDateString('de-DE', {
                            weekday: 'long',
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric'
                        })}
                    </p>
                    <p class="text-gray-600">
                        ğŸ“ {event.data.location.name}, {event.data.location.address}
                    </p>
                </div>
            ))}
        </div>

        
</BaseLayout>
